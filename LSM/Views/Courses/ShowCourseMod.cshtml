@model IEnumerable<LSM.Models.Module>

<br>
<div id="container">
    <div class="row">
        <div class="col-md-6">
            <h2>
                Course: @ViewBag.Name
            </h2>
            <h4>
                Description: @ViewBag.Description
            </h4>
            <h4>
                Start: @ViewBag.Start
            </h4>
            <! course id comes in viewbag.Id. Seems to survive the whole page, past ajax-calls and partial views  >
            <br>

            <h4>
                Modules
            </h4>


            <table class="table-striped table-bordered table-condensed" style="background-color:lemonchiffon">
                <tr>

                    <th>
                        Module @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StopDate)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StopDate)
                        </td>
                        <td>
                            <! Experimenting with ajax partial view >
                            @Ajax.ActionLink("Show Activities", "Act", "Courses",
                                                              new { moduleId = item.Id },
                                                              new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "demo" },
                                                              new { @class = "btn  btn-info" })

                            @*@Html.ActionLink("Show Activities", "Edit", new { id = item.Id })*@
                        </td>
                    </tr>
                }
            </table>

            <br>
            <div>
                @*@ViewBag.Id*@
                @*@Html.ActionLink("Add Modules", "Index", "Courses", new { id = ViewBag.Id }, new { @class = "btn  btn-primary" })*@
                @Ajax.ActionLink("Add Module", "Create2", "Modules",
                                              new { courseId = ViewBag.Id },
                                              new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "demo" },
                                              new { @class = "btn  btn-primary" })
            </div>
            <br>
            <div >
                <! Experimenting with partial view >

                @Html.Action("ShowCourseStud", "Courses", new { id = ViewBag.Id })

            </div>

        </div>
        <div class="col-md-6">
            <br>
            <div id="demo" style="background-color:aliceblue">
                <! Experimenting with ajax partial view >

            </div>
        </div>

    </div>
</div>
    <br>

    <! check course id>
    <div>
        @*@ViewBag.Id*@
        @Ajax.ActionLink("Register more Students", "Reg2", "Account",
                                          new { courseId = ViewBag.Id },
                                          new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "demo" },
                                          new { @class = "btn  btn-primary" })
       
    </div>
    <br>
    <div>
        @Html.ActionLink("Back to Courses", "Index", "Courses", new { @class = "btn  btn-info" })
    </div>

    @section Scripts {
        <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    }
