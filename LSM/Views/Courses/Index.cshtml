@model IEnumerable<LSM.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Course</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ""}, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>View/Edit</th>
        <th>Start</th>
        <th>End</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Edit", new { id = item.Id }, new { @class = "btn  btn-info" })
            
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StopDate)
        </td>
        <td>            
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
